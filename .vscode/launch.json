{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Go Service (Render)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "PORT": "8080"
            },
            "args": [],
            "preLaunchTask": "go: build"
        },
        {
            "name": "Launch Go Service (Debug PORT=3000)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "PORT": "3000"
            },
            "args": [],
            "preLaunchTask": "go: build"
        },
        {
            "name": "Attach to Go Service (Remote Debug)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 2345,
            "host": "127.0.0.1"
        }
    ]
}
